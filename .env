# =========================
# Core runtime configuration
# =========================

# Chain and RPC
CHAIN_ID=1
# Single fallback RPC (used if MULTI_RPC_HTTP_URLS is empty)
RPC_HTTP_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
# Optional WebSocket RPC
RPC_WS_URL=wss://mainnet.infura.io/ws/v3/YOUR_INFURA_KEY
# Multiple HTTP RPCs (preferred): comma-separated list (Infura, Alchemy, QuickNode, etc.)
MULTI_RPC_HTTP_URLS=https://mainnet.infura.io/v3/YOUR_INFURA_KEY,https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY,https://your-quicknode-url.example/KEY/

# Wallet
PRIVATE_KEY=0xYOUR_PRIVATE_KEY
PUBLIC_ADDRESS=0xYourPublicAddress

# Behavior
DRY_RUN=true
MEV_PROTECT=false
FLASHBOTS_RELAY_URL=https://relay.flashbots.net

# Gas
GAS_PRIORITY_GWEI=2
MAX_FEE_MULTIPLIER=1.2

# Logging
LOG_LEVEL=INFO

# =========================
# AI configuration
# =========================

# Provider order: OpenAI primary, Grok fallback
AI_PROVIDER_ORDER=openai,grok

# OpenAI
OPENAI_API_KEY=sk-openai-xxxxxxxx
OPENAI_MODEL=gpt-4o-mini
OPENAI_BASE_URL=https://api.openai.com/v1

# Grok (xAI)
GROK_API_KEY=sk-grok-xxxxxxxx
GROK_MODEL=grok-2
GROK_BASE_URL=https://api.x.ai/v1

# AI request timeouts (seconds)
AI_TIMEOUT_SECONDS=20

# =========================
# Trading/backstops and defaults
# =========================

# Approximate Aave V3 simple flash-loan premium (bps)
AAVE_PREMIUM_BPS=5
# Default DEX minOut slippage (bps)
DEFAULT_SLIPPAGE_BPS=50
# Default flash-loan amount in wei (1 ETH by default)
DEFAULT_FLASHLOAN_AMOUNT_WEI=1000000000000000000

# =========================
# Contracts and DEX addresses (mainnet defaults)
# =========================

# Your deployed executor (set after deployment)
EXECUTOR_ADDRESS=0xYourAIFlashLoanExecutorAddress

# Aave V3 PoolAddressesProvider (Ethereum mainnet)
AAVE_V3_ADDRESSES_PROVIDER=0xa97684ead0e402dC232d5A977953DF7ECBaB3CDb

# Uniswap V2 and Sushi routers (Ethereum mainnet)
UNISWAP_V2_ROUTER=0x7a250d5630B4cF539739dF2C5dAcb4c659F2488D
SUSHISWAP_V2_ROUTER=0xd9e1cE17f2641f24aE83637ab66a2cca9C378B9F

# Common tokens (used by examples/scanner)
WETH_ADDRESS=0xC02aaA39b223FE8D0A0E5C4F27eAD9083C756Cc2
USDC_ADDRESS=0xA0b86991c6218b36c1d19D4a2e9Eb0cE3606eB48

# =========================
# Aggregators and external APIs (optional)
# =========================

# 0x Swap API key (optional but recommended for higher rate limits)
ZEROEX_API_KEY=your_0x_api_key

# Swapzone or others (not used yet)
SWAPZONE_API_KEY=

# =========================
# Foundry/CI helpers
# =========================

# For forge fork tests
MAINNET_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
